{% extends"layoutMapAndMenu.html.twig" %}
{% block css %}
    <link rel="stylesheet" type="text/css" href="/assets/css/basketStylus.css">
{% endblock %}
{% block rightContent %}
    <div class="basketGrid">
        <div class="blackBlock blackBlock__basket"></div>
        <div class="basketContainer">
            <div class="basketBox">
                <div class="basketTitle">
                    <div class="titleBox">
                        <h1>Mon panier</h1>
                    </div>
                    <div class="crossCloseBox">
                        <a href="/"><img src="/assets/img/closeCross.svg"></a>
                    </div>
                </div>
                <div class="basketContentBox">
                    <div class="productInfo">
                        <div class="getInfoBasket">
                            <div class="infoBasket">
                                {% set totalPrice = 0 %}
                                {% for key, item in session.basket %}
                                    {% set totalPrice = totalPrice + (item.productPrice * item.productQuantity) %}
                                    <div class="contentBasket">
                                        <div class="productCode">
                                            <p>{{ key }}</p>
                                        </div>
                                        <div class="productBox">
                                            <div class="infoProduct">
                                                <div class="productName">
                                                    <p>{{ item.productName }}</p>
                                                </div>
                                                <div class="productSeller">
                                                    <p>{{ item.productSeller }}</p>
                                                </div>
                                                <div class="productSinglePrice">
                                                    <p>({{ item.productPrice }}€)</p>
                                                </div>
                                                <div class="productBasketTotalPrice">
                                                    <p>{{ item.productQuantity * item.productPrice }}€</p>
                                                </div>
                                            </div>
                                            <div class="quantityBox">
                                                <form class="formProductBox" method="post" action="/Basket/Updatebasket/{{ key }}">
                                                    <input type="number" min="0" name="productQuantity" value="{{ item.productQuantity }}">
                                                    <div class="addButton">
                                                        <button type="submit" name="modifBtn">Modifier</button>
                                                    </div>
                                                </form>
                                                <div class="trashProduct">
                                                    <a href="/Basket/Remove/{{ key }}"><span class="iconify" data-icon="ion-trash-a" data-inline="false"></span></a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="totalBasketBox">
                    <div class="totalTitle">
                        <p>Total :</p>
                    </div>
                    <div class="totalPrice">
                        <p>{{ totalPrice }}€</p>
                    </div>
                </div>
                <div class="basketInfo">
                    <div class="validateBtn">
                        <button type="submit" class="btn" onclick="location.href='/Order/CreateOrder'">Valider</button>
                    </div>
                    <div class="orderBasket">
                        <a href="/Order/GetAllOrdersByUserId/{{ session.USER_ID }}">Mes commandes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block leftContent %}
    <div id="sellerList" class="widgetContainer SellerCarousel">
        <div class="title-SellerList">
            <h2>Producteurs près de chez vous</h2>
        </div>
        <div class="seller-cards">
            {% for seller in sellerList %}
                <div class="seller-card">
                    <div class="seller-card__image">
                        <img class="seller-card__thumb" src="/assets/img/img1.jpg">
                    </div>
                    <div class="seller-card__resume">
                        <h3><a href=/Seller/GetSellerById/{{ seller.SELL_ID }}>{{ seller['SELL_NAME'] }}</a></h3>
                        <div class="seller-card__rate">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                        </div>
                        <div class="seller-card__tag">
                            <ul>
                                <li>Légumes</li>
                                <li>Bio</li>
                                <li>Permaculture</li>
                            </ul>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}