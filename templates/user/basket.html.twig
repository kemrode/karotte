                    <td>{{ item.PROD_PRICE }}</td>
                    <td><a href="/basket/remove/{{ item.PROD_ID }}" class="btnRemoveAction"></a> </td>
                </tr>
                <p>Produit : {{ product.BASKET_PRODUCT_ID }} </p>
                <p>Quantité : {{ product.BASKET_QUANTITY }} </p>
                <p></p>
            {% endfor %}#}
        </div>
    </div>
{% endblock %}


{% block leftContent %}
