{% extends "header/header.html.twig" %}

{% block seller %}
    <div class="sellerPage">
        {#{% for seller in sellerList %}#}
        <h2>Nom du producteur</h2>
        <div class="resume-seller-page">

            <div class="rate-seller-page">
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
            </div>
            <div class="tag-seller-page">
                <ul class="tags">
                    <li>Légumes</li>
                    <li>Bio</li>
                    <li>Permaculture</li>
                </ul>
            </div>
            <div class="info-seller-page">
                <ul>
