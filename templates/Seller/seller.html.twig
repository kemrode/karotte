{% block body %}
    {#<h1>Bienvenue sur Karotte</h1>#}
<div id="overMapContainer">
    <div id="sellerList" class="widgetContainer SellerCarousel">
        <div class="title-SellerList">
            <h2>Producteurs près de chez vous</h2>
        </div>
        <div class="SellerList">
            {% for seller in sellerList %}
                <div class="seller-card">
                    <div class="img-seller">
                        <img class="thumb-seller" src="/assets/img/img1.jpg">
                    </div>
                    <div class="resume-seller">
                        <h3><a href="/?controller=seller&action=sellerPage">{{ seller['SELL_NAME'] }}</a></h3>
                        <div class="rate-seller">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                        </div>
                        <div class="tag-seller">
                            <ul class="tags">
                                <li>Légumes</li>
                                <li>Bio</li>
                                <li>Permaculture</li>
                            </ul>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

